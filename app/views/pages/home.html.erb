<div class= "banner">
  <div class="banner-text">
    <%= image_tag "GlobeTrotters_logo_blue.png", class: "logo_image" %>

    <p>Share your travel experiences.</p>

    <%# Link to feed wall %>
    <% if current_user %>
      <p><strong><%= link_to "Inspire your next holiday", experiences_path, class: "btn-primary-custom" %></strong></p>
    <% else %>
      <p><strong><%= link_to "Log-in", new_user_session_path, class: "btn-primary-custom" %></strong></p>
    <% end %>
    <a href="#last-element-on-page"><i class="fa-solid fa-chevron-down scroll-down-button" style="color: #ffffff;"></i></a>
  </div>
</div>

<div class="home-background-color">
  <div class="landing-container">
    <h3>Share your experiences!</h3>
    <%= image_tag("experience_landing_page.svg") %>
  </div>
  <div class="landing-container">
    <h3>Create your next journey!</h3>
    <%= image_tag("journey_landing_page.svg", :class => "journey-pic-width") %>
  </div>
  <div class="landing-container">
    <h3>Connect with other travellers!</h3>
    <%= image_tag("landing_chat_room.svg", :class => "journey-pic-width mb-3") %>
  </div>
</div>
