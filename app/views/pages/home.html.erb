<div class= "banner">
  <%= video_tag "Globetrotters_landing_page_video.mp4", :autoplay=> "autoplay", loop: "loop", :controls => false, muted: true, class: "banner-video" %>
  <div class="banner-text">
    <%= image_tag "GlobeTrotters_logo_orange.png", class: "logo_image" %>

    <%# Link to feed wall %>
    <% if current_user %>
      <p><strong><%= link_to "Inspire your next holiday", experiences_path, class: "btn-primary-custom" %></strong></p>
    <% else %>
      <p><strong><%= link_to "Log-in", new_user_session_path, class: "btn-primary-custom" %></strong></p>
    <% end %>
    <a href="#last-element-on-page"><i class="fa-solid fa-chevron-down scroll-down-button" style="color: #ffffff;"></i></a>
  </div>
</div>

<div>
  <div class="landing-container">
    <h3 class="landing-page-info-container">Plan your next journey with the help of <span style= "color: #FF6900;"><strong>AI</strong></span>!</h3>
    <div class= "landing-page-card">
      <%= image_tag "Journey_AI_Widgets.png", class: "journey_widgets" %>
      <p class="middle-margin-text"><strong>Essential info...</strong></p>
      <%= image_tag "packing_list_pic.PNG", class: "journey_widgets" %>
      <p id= "last-element-on-page"><strong>AI generated packing list.</strong></p>
    </div>

    <h3 class="landing-page-info-container"><span style= "color: #FF6900;"><strong>Share</strong></span> your favourite experiences with your fellow travellers!</h3>
    <div class="landing-page-card">
      <%= image_tag "experience_card_pic.PNG", class: "journey_widgets" %>
      <p><strong>Top upvoted experiences <br>shape your sightseeing list!</strong></p>
      <%# <p><strong>Top upvoted experiences shape your sightseeing list!</strong></p> %>
    </div>


    <h3 class="landing-page-info-container"><span style= "color: #FF6900;"><strong>Connect</strong></span> with other travellers!</h3>
    <div class="landing-page-card">
      <%= image_tag "Globetrotters_messaging.PNG", :class => "messaging-pic" %>
      <p><strong>Adventure with friends!</strong></p>
    </div>
      <% if current_user %>
        <p><strong><%= link_to "Inspire your next holiday", experiences_path, class: "btn-primary-custom landing-page-bottom-btn" %></strong></p>
      <% else %>
        <p><strong><%= link_to "Log-in", new_user_session_path, class: "btn-primary-custom landing-page-bottom-btn" %></strong></p>
      <% end %>
  </div>


</div>
