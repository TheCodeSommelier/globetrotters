<%= simple_form_for @journey do |f| %>
  <%= f.input :location, placeholder: "Eg. London" %>
  <%= f.input :start_date,
              as: :string,
              placeholder: "Please pick a start date",
              input_html: { data: { controller: "datepicker" } }  %>
  <%= f.input :end_date,
              as: :string,
              placeholder: "Please pick an end date",
              input_html: { data: { controller: "datepicker" }, value: { } }   %>
  <%= f.input :category, :collection => ["City Break", "Camping", "Skiing", "Diving", "Road Trip"], prompt: "Please select an activity" %>
  <%= f.input :notes, placeholder: "Optional: additional info can be added here" %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
