<div class="row justify-content-center", style="width: 100%">
  <div class="col-sm-8 my-3  ">
    <%= form_with url: experiences_path, method: :get, class: "d-flex mx-2 my-2" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Search something cool"
        %>
      <%= submit_tag "Find", name: "", class: "btn btn-primary mx-2 " %>
    <% end %>
  </div>
</div>

<div class="container">
  <%# <div class="filter-search">
    <div class="filter">
    </div>
    <div class="search">
    </div>
  </div> %>
  <div class="cards">
    <% @experiences.each do |experience| %>
      <div class="experience-card">
        <div class="photo">
          <%# <%= experience.Photo %>
        <div class="avatar">
        </div>
        <div class="title-likes">
          <div class="title">
            <h2><%= experience.title %></h2>
            <div class="like-and-heart">
             <%= image_tag("fi-rr-heart.png") %>
          <div class="like">
            <%= experience.likes %>
          </div>
          </div>
          </div>
        </div>
        </div>
        <div class="content">
          <%= experience.content %>
        </div>
      </div>
    <% end %>
  </div>
</div>
