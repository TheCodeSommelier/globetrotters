<%= content_tag "div", id: "like#{experience.id}" do %>
  <div class="like" data-like-experience-target = "total">
      <%= experience.cached_votes_score %>
  </div>
  <%= link_to like_experience_path(experience), method: :patch, remote: true do %>
    <% if current_user.voted_for? experience %>
      <i class="fa-solid fa-heart vote-icons" style="color: #ff0000;"></i>
    <% else %>
      <i class="fa-solid fa-heart vote-icons" style="color: rgba(239, 239, 240, 0.5); -webkit-text-stroke: 1px rgba(0, 0, 0, 0.6);"></i>
    <% end %>
  <% end %>
<% end %>
