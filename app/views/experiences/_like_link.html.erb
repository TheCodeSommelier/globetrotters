<%= content_tag "div", id: "like#{experience.id}" do %>
  <%= link_to like_experience_path(experience), method: "patch", remote: true do %>
    <% if current_user.voted_for? experience %>
      <i class="fa-solid fa-heart vote-icons" style="color: #ff0000;"></i>
    <% else %>
      <i class="fa-regular fa-heart vote-icons" style="color: #ff0000;"></i>
    <% end %>
  <% end %>
<% end %>
